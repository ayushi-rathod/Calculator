<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   tools:layout_editor_absoluteY="2dp"
                                                   tools:layout_editor_absoluteX="2dp">
    <Button style="@style/FunctionalButtons"
            android:text="+"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:background="#C55E03"
            android:id="@+id/plus_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/percent_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:text="DEL"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/del_button"
            app:layout_constraintStart_toEndOf="@+id/clr_button" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/percent_button" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:text="%"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:id="@+id/percent_button"
            app:layout_constraintStart_toEndOf="@+id/del_button"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/plus_button"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:text="CLR"
            android:id="@+id/clr_button" app:layout_constraintStart_toStartOf="parent"
            android:layout_width="0dp"
            android:layout_height="75dp"
            app:layout_constraintEnd_toStartOf="@+id/del_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="7"
            android:id="@+id/seven_button"
            app:layout_constraintTop_toBottomOf="@+id/clr_button" android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/eight_button"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="8"
            android:id="@+id/eight_button"
            app:layout_constraintStart_toEndOf="@+id/seven_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/del_button" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/nine_button" android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="9"
            android:id="@+id/nine_button"
            app:layout_constraintStart_toEndOf="@+id/eight_button"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/del_button"
            app:layout_constraintEnd_toStartOf="@+id/muliply_button" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="*"
            android:background="#C55E03"
            android:id="@+id/muliply_button"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/plus_button"
            app:layout_constraintStart_toEndOf="@+id/nine_button" android:layout_marginTop="8dp"
            app:layout_constraintHorizontal_bias="0.812" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="4"
            android:id="@+id/four_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/seven_button"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toStartOf="@+id/five_button" android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="5"
            android:id="@+id/five_button"
            app:layout_constraintTop_toBottomOf="@+id/eight_button"
            app:layout_constraintStart_toEndOf="@+id/four_button" app:layout_constraintEnd_toStartOf="@+id/six_button"
            android:layout_marginEnd="8dp" android:layout_marginStart="8dp" android:layout_marginTop="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="6"
            android:id="@+id/six_button"
            app:layout_constraintTop_toBottomOf="@+id/nine_button" app:layout_constraintStart_toEndOf="@+id/five_button"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/minus_button"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="-"
            android:background="#C55E03"
            android:id="@+id/minus_button"
            app:layout_constraintStart_toEndOf="@+id/six_button"
            app:layout_constraintTop_toBottomOf="@+id/muliply_button" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>

    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="1"
            android:id="@+id/one_button"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toBottomOf="@+id/four_button"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toStartOf="@+id/two_button"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="3"
            android:id="@+id/three_button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/six_button" app:layout_constraintStart_toEndOf="@+id/two_button"
            app:layout_constraintEnd_toStartOf="@+id/divide_button" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="/"
            android:background="#C55E03"
            android:id="@+id/divide_button"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/minus_button" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/three_button" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:text="0"
            android:id="@+id/zero_button"
            app:layout_constraintTop_toBottomOf="@+id/one_button"
            app:layout_constraintEnd_toStartOf="@+id/period_button" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="90dp"
            android:layout_height="75dp"
            android:text="."
            android:id="@+id/period_button"
            app:layout_constraintStart_toEndOf="@+id/zero_button" android:layout_marginStart="8dp"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/two_button"
            app:layout_constraintEnd_toStartOf="@+id/equal_button" android:layout_marginEnd="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="="
            android:id="@+id/equal_button"
            android:background="#C55E03"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/three_button"
            app:layout_constraintStart_toEndOf="@+id/period_button" android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp" android:layout_marginTop="8dp"/>
    <Button
            style="@style/FunctionalButtons"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:text="2"
            android:id="@+id/two_button"
            app:layout_constraintTop_toBottomOf="@+id/five_button"
            app:layout_constraintStart_toEndOf="@+id/one_button"
            android:layout_marginStart="8dp" android:layout_marginTop="8dp"
            app:layout_constraintEnd_toStartOf="@+id/three_button" android:layout_marginEnd="8dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>
